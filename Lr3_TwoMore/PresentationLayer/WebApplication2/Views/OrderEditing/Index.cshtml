@{
    Layout = null;
}
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My best app</title>
</head>
<body>
    <div>
        <h1>My best app</h1>
        <h3>Order editing</h3>
        <table>
            <form method="post" action="AddOrder">
                <tr><td><input type="submit" value="Add order" /> </td></tr>  
            </form>
            @foreach (var order in ViewBag.Orders)
            {
            <tr>
                <td><p>Order #@order.OrderNumber</p></td>
                <td><p><a href="/Home/Buy/@order.Id">Edit</a></p></td>
                <td><p><a href="/Home/Buy/@order.Id">Remove</a></p></td>
            </tr>
            }
        </table>
    </div>
</body>
</html>