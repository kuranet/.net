@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My best app</title>
</head>
<body>
    <div>
        <h1>My best app</h1>
        <h3>Order editing</h3>
        <table>
            <tr>
                <form method="post" action="">
            <tr><td><input type="submit" value="Add order" /> </td></tr>
            </form>
            </tr>
            @foreach (var order in ViewBag.Orders)
            {
                <tr>
                    <td><p>@order.OrderNumber</p></td>
                    <td><p><a href="/OrderEditing/Edit/@order.OrderNumber">Edit</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>