@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My best app</title>
</head>
<body>
    <div>
        <h1>My best app</h1>
        <h3>Meal editing</h3>
        <table>
            <tr><td><p><a href="/MealEditing/AddMeal">Add new meal</a></p></td></tr>
            @foreach (var b in ViewBag.Menus)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p><a href="/MealEditing/Edit/@b.Id">Edit</a></p></td>
                    <td><p><a href="/MealEditing/Remove/@b.Id">Remove</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>