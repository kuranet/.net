@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My best app</title>
</head>
<body>
    <div>
        <h1>My best app</h1>
        <h3>Edit concrete menu</h3>
        <table>
            <tr><td><p>@ViewBag.MenuName</p></td></tr>
            <tr><td><p>Meals in menu:</p></td></tr>
            @foreach (var b in ViewBag.InMenuMeals)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p><a href="/MenuEditing/RemoveMeal/@ViewBag.menuId&@b.Id">Remove</a></p></td>
                </tr>
            }
            
            <tr><td><p>Meals that can be added:</p></td></tr>
            @foreach (var b in ViewBag.MealsCanBeAddedToMenu)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p><a href="/MenuEditing/AddMeal/@ViewBag.menuId&@b.Id">Add</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>